#!/usr/bin/env zsh

local name=${1?}
local dev

alias p='>&2 printf'
alias bt='bluetoothctl'
alias bts='>/dev/null bt'

    p '[....] restarting bluetooth\r['\
 && systemctl restart bluetooth\
 && sleep 1\
 && p 'DONE\n'\
 || ! p 'FAIL\n'\
 || exit 1

    p '[....] searching device\r['\
 && dev="$(bt devices | grep "${name}" | cut -d' ' -f2)"\
 && [ -n "${dev}" ]\
 && p 'DONE\n'\
 || p 'SKIP\n'

    p '[....] removing device\r['\
 && [ -n "${dev}" ]\
 && bts remove "${dev}"\
 && p 'DONE\n'\
 || p 'SKIP\n'

    p '[....] scanning devices\r['\
 && dev="$(bt --timeout 20 scan on | grep "${name}" | cut -d' ' -f3)"\
 && [ -n "${dev}" ]\
 && p 'DONE\n'\
 || ! p 'FAIL\n'\
 || exit 1

    p '[....] reconnecting to device\r['\
 && bts pair "${dev}"\
 && bts trust "${dev}"\
 && bts connect "${dev}"\
 && p 'DONE\n'\
 || ! p 'FAIL\n'\
 || exit 1

