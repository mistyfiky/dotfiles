cooler="Cooler Master Technology Inc. MASTERKEYS PRO S"
[ -z "$(xinput --list --id-only "$cooler")" ] || setxkbmap -device "$(xinput --list --id-only "$cooler")" -option -config ~/xkb/cooler.keyboard
yoga="AT Translated Set 2 keyboard"
[ -z "$(xinput --list --id-only "$yoga")" ] || setxkbmap -device "$(xinput --list --id-only "$yoga")" -option -config ~/xkb/yoga.keyboard
